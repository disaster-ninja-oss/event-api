[Unit]
Description=event-api: Event API

[Service]
Type=forking

# WARNING: environment.rc and config files can override any variable defined here.
# WARNING: Do not guess, but read wrapper.sh script instead.

Environment=APP_JAVA_OPTS="-Xmx300m -XX:+HeapDumpOnOutOfMemoryError"
Environment=CLASSPATH=""
Environment=APP_ENTRY_POINT="-jar event-api-1.0-SNAPSHOT.jar"
Environment=APP_ARGS="--spring.config.location=%h/application.yml"
Environment=APP_HOME="%h/current"
Environment=APP_BASE="%h"

WorkingDirectory=%h/current
ExecStart=/bin/bash -c "\"%h/bin/eventapi\" start"
ExecStop=/bin/bash  -c "\"%h/bin/eventapi\" stop"

[Install]
WantedBy=default.target